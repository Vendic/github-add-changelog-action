{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": ["ES2020"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "moduleResolution": "node"
    },
    "include": [".github/actions/**/*.ts", "**/*.ts"],
    "exclude": ["node_modules", "__tests__"]
}
